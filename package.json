{
  "name": "paper-slack-bot",
  "version": "1.0.0",
  "description": "Research paper fetcher and Slack notifier",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "check": "pnpm typecheck && pnpm lint"
  },
  "keywords": [
    "arxiv",
    "slack",
    "research",
    "papers"
  ],
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "fast-xml-parser": "^5.3.4",
    "resend": "^6.9.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "eslint": "^8.57.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
