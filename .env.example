# Notification Type: slack or email
NOTIFY_TYPE=email

# arXiv Settings
ARXIV_QUERY=cat:cs.AI OR cat:cs.LG
MAX_PAPERS=100
DAYS_BACK=1

# Semantic Scholar (optional)
SEMANTIC_SCHOLAR_API_KEY=

# Filter
MIN_CITATIONS=0

# Slack (when NOTIFY_TYPE=slack)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email (when NOTIFY_TYPE=email)
RESEND_API_KEY=re_xxxxxx
EMAIL_FROM=papers@yourdomain.com
EMAIL_TO=you@example.com
